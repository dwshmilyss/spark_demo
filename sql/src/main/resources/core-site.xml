<!-- Put site-specific property overrides in this file. -->

<configuration>
 <!-- 指定hdfs的nameservice为ns1,是NameNode的URI。hdfs://主机名全限定名:端口/ -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://gagcluster</value>
        <!--<value>hdfs://yiban.isilon:8020</value>-->
    </property>
  <!-- SequenceFiles在读写中可以使用的缓存大小 单位bytes -->
    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
    </property>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/usr/local/data/hadoop-2.8.2/tmp/hadoop-${user.name}</value>
    </property>
 <!--指定可以在任何IP访问-->
    <property>
        <name>hadoop.proxyuser.root.hosts</name>
        <value>*</value>
    </property>
 <!--指定所有用户可以访问-->
    <property>
        <name>hadoop.proxyuser.root.groups</name>
        <value>*</value>
    </property>
<!-- 指定zookeeper地址，数量必须是奇数个，且不能少于3个节点 -->
    <property>
        <name>ha.zookeeper.quorum</name>
        <value>master01:2181,master02:2181,slave01:2181,slave02:2181,slave03:2181</value>
    </property>
    <property>
        <name>fs.trash.checkpoint.interval</name>
	<value>0</value>
	<description>Number of minutes between trash checkpoints.
	Should be smaller or equal to fs.trash.interval. If zero,
	the value is set to the value of fs.trash.interval.
	Every time the checkpointer runs it creates a new checkpoint 
	out of current and removes checkpoints created more than 
	fs.trash.interval minutes ago.
	</description>
    </property>
<!-- 垃圾箱文件清除时间 单位是分钟-->
    <property>
	<name>fs.trash.interval</name>
	<value>60</value>
	<description>Number of minutes after which the checkpoint
	gets deleted.  If zero, the trash feature is disabled.
	This option may be configured both on the server and the
	client. If trash is disabled server side then the client
	side configuration is checked. If trash is enabled on the
	server side then the value configured on the server is
	used and the client configuration value is ignored.
	</description>
   </property>
